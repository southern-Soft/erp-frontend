# Production Environment Configuration
# Extends .env with production-specific settings

PROTOCOL=https
HOST_NAME=erp.southernapparels.com
PORT=443

# Site URL
NEXT_PUBLIC_SITE_URL=${PROTOCOL}://${HOST_NAME}

# Encryption Settings (IMPORTANT: Replace with secure production values)
NEXT_PUBLIC_ENCRYPT_SECRETS=true
NEXT_PUBLIC_CRYPTOGRAPH_IV=REPLACE_WITH_PRODUCTION_IV
NEXT_PUBLIC_CRYPTOGRAPH_KEY=REPLACE_WITH_PRODUCTION_KEY

# API Masking
NEXT_PUBLIC_API_MASK_URL=${NEXT_PUBLIC_SITE_URL}/external-api

# Auth Cookie Name
NEXT_PUBLIC_USER_COOKIE=sa-erp-user

# Production Backend (IMPORTANT: Replace with actual production URL)
API_URL=https://api.southernapparels.com
BACKEND_URL=https://api.southernapparels.com
